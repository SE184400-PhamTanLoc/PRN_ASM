<Window x:Class="FUMiniTikiSystem.OrderManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniTikiSystem"
        xmlns:converters="clr-namespace:FUMiniTikiSystem.Converters"
        mc:Ignorable="d"
        Title="Order Management" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f8f8f8"
        MinHeight="600" MinWidth="1000">
    
    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Back Button -->
                    <Button Name="BackToDashboardButton" 
                            Grid.Column="0"
                            Content="â† Back to Dashboard" 
                            Width="150" 
                            Height="35"
                            Background="#34495e"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="12"
                            BorderThickness="0"
                            Click="BackToDashboardButton_Click"
                            HorizontalAlignment="Left">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2c3e50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="Order Management" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#2c3e50"
                               HorizontalAlignment="Center"/>
                </Grid>
                <TextBlock Text="View and manage customer orders, update status, and track order processing" 
                           FontSize="14" 
                           Foreground="#7f8c8d"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Main Content -->
            <Grid Grid.Row="1" MinHeight="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="600"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="400" MinWidth="350"/>
                </Grid.ColumnDefinitions>
                
                <!-- Order List -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Orders" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <ComboBox Name="StatusFilterComboBox" 
                                          Width="120" 
                                          Height="30" 
                                          Margin="0,0,10,0"
                                          SelectionChanged="StatusFilterComboBox_SelectionChanged">
                                    <ComboBoxItem Content="All Status" IsSelected="True"/>
                                    <ComboBoxItem Content="Pending"/>
                                    <ComboBoxItem Content="Processing"/>
                                    <ComboBoxItem Content="Shipped"/>
                                    <ComboBoxItem Content="Delivered"/>
                                    <ComboBoxItem Content="Cancelled"/>
                                </ComboBox>
                                
                                <Button Name="RefreshButton" 
                                        Content="ðŸ”„ Refresh" 
                                        Width="100" 
                                        Height="30"
                                        Background="#3498db"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="12"
                                        BorderThickness="0"
                                        Click="RefreshButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2980b9"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                        
                        <ListView Name="OrderListView" 
                                  BorderThickness="0"
                                  SelectionChanged="OrderListView_SelectionChanged"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,5" 
                                            Padding="15" 
                                            Background="#f8f9fa" 
                                            CornerRadius="6"
                                            BorderThickness="1"
                                            BorderBrush="#e9ecef">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Order Icon -->
                                            <Border Grid.Column="0" 
                                                    Width="50" 
                                                    Height="50" 
                                                    Margin="0,0,15,0"
                                                    Background="#3498db"
                                                    CornerRadius="25">
                                                <TextBlock Text="ðŸ“¦" 
                                                           FontSize="20" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Order Info -->
                                            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                                <TextBlock Text="{Binding CustomerName}" 
                                                           FontWeight="Bold" 
                                                           FontSize="14"
                                                           Foreground="#2c3e50"/>
                                                <TextBlock Text="{Binding CustomerEmail}" 
                                                           FontSize="12"
                                                           Foreground="#7f8c8d"
                                                           Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding FormattedOrderDate}" 
                                                           FontSize="11"
                                                           Foreground="#95a5a6"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                            
                                            <!-- Amount -->
                                            <StackPanel Grid.Column="2" Margin="0,0,15,0">
                                                <TextBlock Text="{Binding FormattedAmount}" 
                                                           FontWeight="Bold" 
                                                           FontSize="14"
                                                           Foreground="#27ae60"
                                                           HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding ProductCount, StringFormat='{}{0} items'}" 
                                                           FontSize="11"
                                                           Foreground="#7f8c8d"
                                                           HorizontalAlignment="Right"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                            
                                            <!-- Status -->
                                            <Border Grid.Column="3" 
                                                    Padding="8,4" 
                                                    CornerRadius="12"
                                                    Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                                                <TextBlock Text="{Binding Status}" 
                                                           FontSize="11"
                                                           FontWeight="Bold"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
                
                <!-- Separator -->
                <GridSplitter Grid.Column="1" 
                              Width="5" 
                              HorizontalAlignment="Center"
                              Background="#e9ecef"/>
                
                <!-- Order Details -->
                <ScrollViewer Grid.Column="2" 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="10,0,0,0">
                    <Border Background="White" 
                            CornerRadius="8" 
                            Padding="20"
                            MinHeight="400">
                        <StackPanel>
                            <TextBlock Text="Order Details" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,20"/>
                            
                            <!-- Order ID -->
                            <TextBlock Text="Order ID:" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Name="txtOrderId" 
                                       Text="Select an order" 
                                       FontSize="14"
                                       Foreground="#7f8c8d"
                                       Margin="0,0,0,15"/>
                            
                            <!-- Customer Info -->
                            <TextBlock Text="Customer Information:" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Name="txtCustomerInfo" 
                                       Text="N/A" 
                                       FontSize="14"
                                       Foreground="#7f8c8d"
                                       Margin="0,0,0,15"/>
                            
                            <!-- Order Date -->
                            <TextBlock Text="Order Date:" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Name="txtOrderDate" 
                                       Text="N/A" 
                                       FontSize="14"
                                       Foreground="#7f8c8d"
                                       Margin="0,0,0,15"/>
                            
                            <!-- Amount -->
                            <TextBlock Text="Total Amount:" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Name="txtAmount" 
                                       Text="N/A" 
                                       FontSize="14"
                                       Foreground="#7f8c8d"
                                       Margin="0,0,0,15"/>
                            
                            <!-- Products -->
                            <TextBlock Text="Products:" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Name="txtProducts" 
                                       Text="N/A" 
                                       FontSize="14"
                                       Foreground="#7f8c8d"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,20"/>
                            
                            <!-- Status Update -->
                            <TextBlock Text="Update Status:" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <ComboBox Name="StatusUpdateComboBox" 
                                      Height="35" 
                                      FontSize="14"
                                      Padding="8"
                                      Margin="0,0,0,15"
                                      IsEnabled="False">
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Processing"/>
                                <ComboBoxItem Content="Shipped"/>
                                <ComboBoxItem Content="Delivered"/>
                                <ComboBoxItem Content="Cancelled"/>
                            </ComboBox>
                            
                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <Button Name="UpdateStatusButton" 
                                        Content="Update Status" 
                                        Width="120" 
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="#27ae60"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="13"
                                        BorderThickness="0"
                                        Click="UpdateStatusButton_Click"
                                        IsEnabled="False">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#229954"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                
                                <Button Name="ViewDetailsButton" 
                                        Content="View Details" 
                                        Width="120" 
                                        Height="36"
                                        Background="#3498db"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="13"
                                        BorderThickness="0"
                                        Click="ViewDetailsButton_Click"
                                        IsEnabled="False">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2980b9"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </Grid>
            
            <!-- Status Bar -->
            <Border Grid.Row="2" 
                    Background="#ecf0f1" 
                    CornerRadius="6" 
                    Padding="15"
                    Margin="0,20,0,0">
                <TextBlock Name="StatusTextBlock" 
                           Text="Ready" 
                           FontSize="12"
                           Foreground="#7f8c8d"/>
            </Border>
        </Grid>
    </ScrollViewer>
</Window> 