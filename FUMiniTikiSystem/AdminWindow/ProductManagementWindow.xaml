<Window x:Class="FUMiniTikiSystem.ProductManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Management" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f8f8f8"
        MinHeight="600" MinWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Back Button -->
                    <Button Name="BackButton" 
                            Grid.Column="0"
                            Content="â† Back to Categories" 
                            Width="150" 
                            Height="35"
                            Background="#34495e"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="12"
                            BorderThickness="0"
                            Click="BackButton_Click"
                            HorizontalAlignment="Left">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2c3e50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="Product Management" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#2c3e50"
                               HorizontalAlignment="Center"/>
                </Grid>
                <TextBlock Name="CategoryInfoText" 
                           Text="Create, update, and delete products" 
                           FontSize="14" 
                           Foreground="#7f8c8d"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Main Content -->
            <Grid Grid.Row="1" MinHeight="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="400"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="450" MinWidth="400"/>
                </Grid.ColumnDefinitions>
                
                <!-- Product List -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Products" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>
                        
                        <ListView Name="ProductListView" 
                                  BorderThickness="0"
                                  SelectionChanged="ProductListView_SelectionChanged"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,5" 
                                            Padding="15" 
                                            Background="#f8f9fa" 
                                            CornerRadius="6"
                                            BorderThickness="1"
                                            BorderBrush="#e9ecef">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="Bold" 
                                                       FontSize="16"
                                                       Foreground="#2c3e50"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       FontSize="12"
                                                       Foreground="#7f8c8d"
                                                       TextWrapping="Wrap"
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding Price, StringFormat='Price: ${0:F2}'}" 
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Foreground="#27ae60"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
                
                <!-- Separator -->
                <GridSplitter Grid.Column="1" 
                              Width="5" 
                              HorizontalAlignment="Center"
                              Background="#e9ecef"/>
                
                <!-- Add/Edit Form -->
                <ScrollViewer Grid.Column="2" 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="10,0,0,0">
                    <Border Background="White" 
                            CornerRadius="8" 
                            Padding="20"
                            MinHeight="400">
                        <StackPanel>
                            <!-- Header with Add New Button -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Name="FormTitle" 
                                           Text="Add New Product" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"/>
                                
                                <Button Name="ResetButton" 
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        Content="Reset" 
                                        Width="100" 
                                        Height="32"
                                        Background="#3498db"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="12"
                                        BorderThickness="0"
                                        Click="ResetButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2980b9"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Name="EditButton" 
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Content="Edit" 
                                        Width="100" 
                                        Height="32"
                                        Background="#006633"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="12"
                                        BorderThickness="0"
                                        Click="EditButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2980b9"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Name="DeleteButton" 
                                        Grid.Column="1"
                                        Grid.Row="2"
                                        Content="Delete" 
                                        Width="100" 
                                        Height="32"
                                        Background="#FF0000"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="12"
                                        BorderThickness="0"
                                        Click="DeleteButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#c0392b"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                            
                            <!-- Product Name -->
                            <TextBlock Text="Product Name *" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBox Name="NameTextBox" 
                                     Height="35" 
                                     FontSize="14"
                                     Padding="8"
                                     Margin="0,0,0,15"
                                     VerticalContentAlignment="Center"
                                     BorderBrush="#ddd"
                                     BorderThickness="1"/>
                            
                            <!-- Price -->
                            <TextBlock Text="Price *" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBox Name="PriceTextBox" 
                                     Height="35" 
                                     FontSize="14"
                                     Padding="8"
                                     Margin="0,0,0,15"
                                     VerticalContentAlignment="Center"
                                     BorderBrush="#ddd"
                                     BorderThickness="1"/>
                            
                            <!-- Description -->
                            <TextBlock Text="Description" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBox Name="DescriptionTextBox" 
                                     Height="80" 
                                     FontSize="14"
                                     Padding="8"
                                     Margin="0,0,0,15"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     BorderBrush="#ddd"
                                     BorderThickness="1"/>
                            
                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <Button Name="SaveButton" 
                                        Content="Save" 
                                        Width="90" 
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="#27ae60"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="13"
                                        BorderThickness="0"
                                        Click="SaveButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=FormTitle, Path=Text}" Value="Edit Product">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#229954"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                
                                <Button Name="UpdateButton" 
                                        Content="Update" 
                                        Width="90" 
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="#f39c12"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="13"
                                        BorderThickness="0"
                                        Click="UpdateButton_Click"
                                        Visibility="Collapsed">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=FormTitle, Path=Text}" Value="Add New Product">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#e67e22"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                
                                <Button Name="CancelButton" 
                                        Content="Cancel" 
                                        Width="90" 
                                        Height="36"
                                        Background="#95a5a6"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="13"
                                        BorderThickness="0"
                                        Click="CancelButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#7f8c8d"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </Grid>
            
            <!-- Status Bar -->
            <Border Grid.Row="2" 
                    Background="#ecf0f1" 
                    CornerRadius="6" 
                    Padding="15"
                    Margin="0,20,0,0">
                <TextBlock Name="StatusTextBlock" 
                           Text="Ready" 
                           FontSize="12"
                           Foreground="#7f8c8d"/>
            </Border>
        </Grid>
    </ScrollViewer>
</Window> 