<Window x:Class="FUMiniTikiSystem.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniTikiSystem"
        mc:Ignorable="d"
        Title="FU Mini Tiki System - Admin Dashboard" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="DashboardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" Direction="270" 
                                    ShadowDepth="8" BlurRadius="20" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Danger Button Style -->
        <Style x:Key="ModernDangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C62828"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="White" 
            BorderThickness="1" BorderBrush="#E0E0E0">
        <Border.Effect>
            <DropShadowEffect Color="#40000000" Direction="270" 
                            ShadowDepth="15" BlurRadius="25" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Gradient -->
            <Border Grid.Row="0" CornerRadius="20,20,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2C3E50" Offset="0"/>
                        <GradientStop Color="#34495E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="30,25,30,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="FU Mini Tiki System" 
                                   FontSize="28" FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock x:Name="txtWelcome" Text="Admin Dashboard" 
                                   FontSize="16" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="btnLogout" Content="ðŸšª Logout" 
                                Style="{StaticResource ModernDangerButtonStyle}"
                                Click="btnLogout_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,10">
                <Grid x:Name="gridMain" Margin="30,20,30,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Category Management Card -->
                    <Border Grid.Row="0" Grid.Column="0" 
                            Style="{StaticResource DashboardCardStyle}"
                            MouseLeftButtonDown="CategoryCard_Click">
                        <StackPanel>
                            <Border Width="80" Height="80" 
                                    Background="#3498DB" 
                                    CornerRadius="40" 
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,20">
                                <TextBlock Text="ðŸ“‚" 
                                           FontSize="40" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Text="Category Management" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Manage product categories, add images, and organize your product catalog efficiently." 
                                       FontSize="14" 
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"
                                       LineHeight="20"
                                       Margin="0,0,0,20"/>
                            
                            <Button Content="Open Category Management" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Click="CategoryCard_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Order Management Card -->
                    <Border Grid.Row="0" Grid.Column="1" 
                            Style="{StaticResource DashboardCardStyle}"
                            MouseLeftButtonDown="OrderCard_Click">
                        <StackPanel>
                            <Border Width="80" Height="80" 
                                    Background="#E74C3C" 
                                    CornerRadius="40" 
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,20">
                                <TextBlock Text="ðŸ“‹" 
                                           FontSize="40" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Text="Order Management" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="View and manage customer orders, track order status, and handle order processing." 
                                       FontSize="14" 
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"
                                       LineHeight="20"
                                       Margin="0,0,0,20"/>
                            
                            <Button Content="Open Order Management" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Click="OrderCard_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Statistics Cards Row -->
                    <Border Grid.Row="1" Grid.Column="0" 
                            Style="{StaticResource DashboardCardStyle}"
                            Margin="15,30,15,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Quick Statistics" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Categories Count -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock x:Name="txtCategoriesCount" 
                                               Text="0" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="#3498DB"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Categories" 
                                               FontSize="12" 
                                               Foreground="#7F8C8D"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Products Count -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock x:Name="txtProductsCount" 
                                               Text="0" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="#E74C3C"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Products" 
                                               FontSize="12" 
                                               Foreground="#7F8C8D"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Recent Orders Card -->
                    <Border Grid.Row="1" Grid.Column="1" 
                            Style="{StaticResource DashboardCardStyle}"
                            Margin="15,30,15,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ•’ Recent Orders" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,15"/>
                            
                            <TextBlock x:Name="txtRecentOrders" 
                                       Text="No recent orders" 
                                       FontSize="14" 
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>

            <!-- Status Bar -->
            <Border Grid.Row="2" 
                    Background="#ECF0F1" 
                    CornerRadius="0,0,20,20" 
                    Padding="20,15"
                    Margin="0,20,0,0">
                <TextBlock x:Name="txtStatus" 
                           Text="Ready" 
                           FontSize="12"
                           Foreground="#7F8C8D"/>
            </Border>
        </Grid>
    </Border>
</Window> 