<Window x:Class="FUMiniTikiSystem.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register - FUMiniTiki System" 
        Height="850" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Input Style -->
        <Style x:Key="ModernInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="2" 
                                BorderBrush="Transparent">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="2" 
                                BorderBrush="Transparent">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="White" 
            BorderThickness="1" BorderBrush="#E0E0E0">
        <Border.Effect>
            <DropShadowEffect Color="#40000000" Direction="270" 
                            ShadowDepth="10" BlurRadius="20" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Gradient -->
            <Border Grid.Row="0" CornerRadius="20,20,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4CAF50" Offset="0"/>
                        <GradientStop Color="#45A049" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Margin="30,40,30,30">
                    <TextBlock Text="ðŸš€ Join FUMiniTiki" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             Foreground="White"
                             HorizontalAlignment="Center" 
                             Margin="0,0,0,10"/>
                    <TextBlock Text="Create your account and start shopping" 
                             FontSize="16" 
                             Foreground="White" 
                             Opacity="0.9"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,30,0,10" Grid.RowSpan="2">
                <StackPanel Margin="40,30,40,20">
                    <!-- Full Name Section -->
                    <TextBlock Text="Full Name" 
                             FontSize="14" 
                             FontWeight="SemiBold" 
                             Foreground="#333333"
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="txtName" 
                             Style="{StaticResource ModernInputStyle}"
                             Margin="0,0,0,20"
                             FontFamily="Segoe UI"/>

                    <!-- Email Section -->
                    <TextBlock Text="Email Address" 
                             FontSize="14" 
                             FontWeight="SemiBold" 
                             Foreground="#333333"
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="txtEmail" 
                             Style="{StaticResource ModernInputStyle}"
                             Margin="0,0,0,20"
                             FontFamily="Segoe UI"/>

                    <!-- Password Section -->
                    <TextBlock Text="Password" 
                             FontSize="14" 
                             FontWeight="SemiBold" 
                             Foreground="#333333"
                             Margin="0,0,0,8"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Style="{StaticResource ModernPasswordStyle}"
                                 Margin="0,0,0,20"/>

                    <!-- Confirm Password Section -->
                    <TextBlock Text="Confirm Password" 
                             FontSize="14" 
                             FontWeight="SemiBold" 
                             Foreground="#333333"
                             Margin="0,0,0,8"/>
                    <PasswordBox x:Name="txtConfirmPassword" 
                                 Style="{StaticResource ModernPasswordStyle}"
                                 Margin="0,0,0,30"/>

                    <!-- Register Button -->
                    <Button x:Name="btnRegister" 
                          Content="Create Account" 
                          Click="btnRegister_Click"
                          Style="{StaticResource ModernButtonStyle}"
                          Height="50"
                          Margin="0,0,0,20"/>

                    <!-- Error Message -->
                    <TextBlock x:Name="txtErrorMessage" 
                             Foreground="#F44336" 
                             HorizontalAlignment="Center" 
                             Margin="0,0,0,20"
                             FontSize="13"
                             TextWrapping="Wrap"
                             Visibility="Collapsed"/>

                    <!-- Success Message -->
                    <TextBlock x:Name="txtSuccessMessage" 
                             Foreground="#4CAF50" 
                             HorizontalAlignment="Center" 
                             Margin="0,0,0,20"
                             FontSize="13"
                             TextWrapping="Wrap"
                             Visibility="Collapsed"/>

                    <!-- Divider -->
                    <Grid Margin="0,20,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Height="1" Background="#E0E0E0" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="or" 
                                 Foreground="#999999" 
                                 FontSize="14" 
                                 Margin="15,0"/>
                        <Border Grid.Column="2" Height="1" Background="#E0E0E0" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Login Link -->
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Center">
                        <TextBlock Text="Already have an account? " 
                                 FontSize="14" 
                                 Foreground="#666666"/>
                        <TextBlock Text="Sign in now" 
                                 Foreground="#4CAF50" 
                                 Cursor="Hand"
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 MouseLeftButtonDown="txtLogin_MouseLeftButtonDown"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Close Button -->
            <Button Grid.Row="2" Content="âœ•" 
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Width="30" Height="30"
                  Margin="0,10,10,0"
                  Background="Transparent"
                  BorderThickness="0"
                  Foreground="#999999"
                  FontSize="16"
                  Click="btnClose_Click"/>
        </Grid>
    </Border>
</Window>