<Window x:Class="FUMiniTikiSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - FUMiniTiki System" 
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#F5F5F5">
        <Border CornerRadius="10" Background="White" Padding="30" Margin="0,19,0,10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
                <TextBlock Text="FUMiniTiki System" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="#1976D2"
                         HorizontalAlignment="Center" 
                         Margin="0,0,0,30"/>

                <TextBlock Text="Email:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="txtEmail" 
                         Padding="10,8" 
                         Width="227"
                         Margin="0,0,0,15"
                         FontSize="14"
                         />

                <TextBlock Text="Password:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <Grid Width="286" Height="38">
                    <!-- PasswordBox (ẩn) -->
                    <PasswordBox x:Name="txtPassword" 
                 Padding="10,8"
                 Width="228"
                 VerticalAlignment="Center"
                 Visibility="Visible"/>
                    <!-- TextBox (hiện) -->
                    <TextBox x:Name="txtPasswordVisible"
             Padding="10,8"
             Width="228"
             VerticalAlignment="Center"
             Visibility="Collapsed"/>
                    <!-- Eye Button -->
                    <Button x:Name="btnTogglePassword"
            Width="32" Height="32"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,0,0"
            Click="btnTogglePassword_Click"
            Background="Transparent"
            BorderThickness="0"
            ToolTip="Show/Hide Password">
                        <TextBlock x:Name="iconEye" Text="👁" FontSize="16"/>
                    </Button>
                </Grid>

                <CheckBox x:Name="chkRememberMe" 
                        Content="Remember me" 
                        Margin="0,10,0,20"
                        FontSize="13"/>

                <Button x:Name="btnLogin" 
                      Content="Login" 
                      Click="btnLogin_Click"
                      Background="#2196F3"
                      Foreground="White"
                      Padding="20,10"
                      FontSize="15"
                      FontWeight="SemiBold"
                      BorderThickness="0"
                      Margin="0,0,0,10"
                      Height="40"
                      />

                <TextBlock x:Name="txtErrorMessage" 
                         Foreground="Red" 
                         HorizontalAlignment="Center" 
                         Margin="0,10,0,0"
                         FontSize="13"
                         TextWrapping="Wrap"
                         Visibility="Collapsed"/>

                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Center" 
                          Margin="0,20,0,0">
                    <TextBlock Text="Don't have an account? " FontSize="13"/>
                    <TextBlock Text="Register now" 
                             Foreground="#1976D2" 
                             Cursor="Hand"
                             FontWeight="SemiBold"
                             FontSize="13"
                             MouseLeftButtonDown="txtRegister_MouseLeftButtonDown"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>